<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color1f"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    app:theme="@style/Theme.MyFancyTheme"
    app:titleTextColor="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color1f"
        android:gravity="center_vertical"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:weightSum="5">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/duo_shape_rectangled_red"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            app:srcCompat="@drawable/anika" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView21"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/title" />

        <TextView
            android:id="@+id/title_toolbar1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="55dp"

            android:layout_weight="2"
            android:fontFamily="t"
            android:gravity="center_vertical"
            android:textColor="@color/back_nav_lv"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/logoToolBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_weight="2"
            android:padding="3dp" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>