            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:background="@drawable/bg_header" />

            <LinearLayout
